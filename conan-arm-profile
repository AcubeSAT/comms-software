[settings]
os=baremetal
arch=armv7
compiler=gcc
build_type=Debug
compiler.cppstd=gnu17
compiler.libcxx=libstdc++11
compiler.version=12

[buildenv]
CC=$(which arm-none-eabi-gcc)
CXX=$(which arm-none-eabi-g++)

[conf]
tools.build:cxxflags=["-mcpu=cortex-m7 -mthumb -mthumb-interwork -ffunction-sections -fdata-sections -fno-common -fmessage-length=0 -specs=nosys.specs -specs=nano.specs -mfloat-abi=hard -mfpu=fpv5-d16"]
tools.build:cflags=["-mcpu=cortex-m7 -mthumb -mthumb-interwork -ffunction-sections -fdata-sections -fno-common -fmessage-length=0 -specs=nosys.specs -specs=nano.specs -mfloat-abi=hard -mfpu=fpv5-d16"]
tools.build:exelinkflags=["-Wl,-gc-sections"]
